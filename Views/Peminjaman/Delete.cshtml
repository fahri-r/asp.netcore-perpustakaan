@model Perpustakaan.Models.Pinjam;

@{
ViewData["Title"] = "Hapus Peminjaman";

Perpustakaan.Data.ApplicationDbContext db = new Perpustakaan.Data.ApplicationDbContext();
List<Perpustakaan.Models.Anggota> ListAnggota = db.Anggota.ToList();
List<Perpustakaan.Models.Pegawai> ListPegawai = db.Pegawai.ToList();
List<Perpustakaan.Models.Buku> ListBuku = db.Buku.ToList();


String namaA= db.Anggota.Where(m => m.NoKtp == Model.NoKtp1).Select(u => u.NamaLengkap).FirstOrDefault();
String judulB= db.Buku.Where(m => m.KodeBuku == Model.KodeBuku1).Select(u => u.JudulBuku).FirstOrDefault();
String namaP= db.Pegawai.Where(m => m.Nip == Model.Nip1).Select(u => u.NamaPegawai).FirstOrDefault();
}

@section breadcrumb{
<div class="row mb-2">
    <div class="col-sm-6">
        <h1 class="m-0 text-dark">Hapus Data Peminjaman</h1>
    </div><!-- /.col -->
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Peminjaman">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Peminjaman">Peminjaman</a></li>
            <li class="breadcrumb-item active">Hapus Peminjaman</li>
        </ol>
    </div><!-- /.col -->
</div><!-- /.row -->
}

<div class="row justify-content-center">
    <!-- left column -->
    <div class="col-md-8">
        <!-- general form elements -->
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Formulir Hapus Data Peminjaman</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="Delete" asp-controller="Peminjaman" method="POST">
                <div class="card-body">
                    <div class="form-group">
                        <label>Tanggal Pinjam</label>
                        <input asp-for="TglPinjam" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label>Tanggal Pinjam</label>
                        <input asp-for="TglKembali" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label>No. KTP Anggota</label>
                        <input asp-for="NoKtp1" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <input value="@namaA" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label>Kode Buku</label>
                        <input asp-for="KodeBuku1" class="form-control" rows="3" disabled>
                    </div>
                    <div class="form-group">
                        <input value="@judulB" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label>NIP</label>
                        <input asp-for="Nip1" class="form-control" rows="3" disabled>
                    </div>
                    <div class="form-group">
                        <input value="@namaP" type="text" class="form-control" disabled>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-danger" value="Delete">Hapus</button>
                </div>
            </form>
        </div>
        <!-- /.card -->

    </div>
    <!--/.col (left) -->
</div>